<%- include("includes/head") %>
  <%- include("includes/nav") %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">
            Agenda
          </h1>
          <p class="text-center lead">Realize Login ou Crie sua conta abaixo!</p>
          <%- include("includes/messages") %>
          <div class="row">
            <div class="col-lg">
              <h4>Faça seu cadastro</h4>
              <p>Não tem conta? Preencha o formulario abaixo!</p>
              <form action="/login/register" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label>Seu email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-3">Criar minha conta</button>
              </form>
            </div>
            <div class="col-lg">
              <h4>
                Login
              </h4>
              <p>Ja tem conta? Efetue login abaixo.</p>
              <form action="/login/login" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label>Seu email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-3">Efetuar login</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include("includes/footer") %>