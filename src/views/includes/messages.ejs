<% if(erros.length> 0) { %>

    <div class="row">
        <div class="col my-3">
            <div class="alert alert-danger">
                <% erros.map(erro=> { %>
                    <%= erro %><br>
                        <% } );%>
            </div>
        </div>
    </div>
    <% } %>

        <% if(success.length > 0) { %>
            <div class="row">
                <div class="col my-3">
                    <div class="alert alert-success">
                        <%= success %>
                    </div>
                </div>
            </div>
            <% } %>